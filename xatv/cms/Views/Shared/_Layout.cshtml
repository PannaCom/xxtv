<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Des">
    <!-- Google fonts -->
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,300,700' rel='stylesheet' type='text/css'>

    <!-- font awesome -->
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

    <!-- bootstrap -->
    <link rel="stylesheet" href="~/Content/assets/bootstrap/css/bootstrap.min.css" />

    <!-- animate.css -->
    <link rel="stylesheet" href="~/Content/assets/animate/animate.css" />
    <link rel="stylesheet" href="~/Content/assets/animate/set.css" />

    <!-- gallery -->
    <link rel="stylesheet" href="~/Content/assets/gallery/blueimp-gallery.min.css">

    <!-- favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Content/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/Content/assets/style.css">
    <!-- jQuery -->
    <script src="~/Content/themes/admin/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/Scripts/jquery-ui.js"></script>
    <link rel="stylesheet" href="/Scripts/jquery-ui.css">
</head>

<body>
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '972244092814242',
                xfbml: true,
                version: 'v2.5'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-71626778-1', 'auto');
        ga('send', 'pageview');

    </script>

    <div class="topbar animated fadeInLeftBig"></div>
    <div style="background-image:url('/Images/bgh.png');background-repeat:no-repeat;background-position:center;background-size:100% 100%;">
    </div>
    <!-- Header Starts -->
    <div class="navbar-wrapper" style="text-shadow: 0 0 5px #0026ff, 0 0 7px #0026ff;">
        <div class="container">

            <div class="navbar navbar-default navbar-fixed-top" role="navigation" id="top-nav" style="background-color:#008000;">
                <div class="container">
                    <div class="navbar-header">
                        <!-- Logo Starts -->
                        <a class="navbar-brand" href="/Home/Index"><img src="/Images/logo.png" alt="logo" onclick="gohome();"></a>
                        <br /><span style="color:yellow;text-weight:bold;margin-top:25px;">HotLine: 0967899999</span>
                        <!-- #Logo Ends -->
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>


                    <!-- Nav Starts -->
                    <div class="navbar-collapse  collapse">

                        <input type="text" id="name" placeholder="tìm kiếm" style="width:200px;margin-top:28px;height:25px;">
                        <input type="button" value="Search" style="width:80px;height:25px;text-align:center;margin-top:28px;" onclick="searchNow();">

                        <ul class="nav navbar-nav navbar-right scroll">
                            <li class="active"><a href="/Home/" style="color:#fff;" onclick="goto('/Home/');">Trang chủ</a></li>
                            <li><a href="#about" style="color:#fff;">Giới thiệu</a></li>
                            <li><a href="/ThongKe/List" style="color:#fff;" onclick="goto('/ThongKe/List');">Danh sách Ủng hộ</a></li>
                            <li><a href="/Home/Gift?menu_id=5" style="color:#fff;" onclick="goto('/Home/Gift?menu_id=5');">Quà tặng</a></li>
                            <li><a href="#contact" style="color:#fff;">Gửi địa điểm mới</a></li>
                        </ul>
                    </div>
                    <!-- #Nav Ends -->

                </div>
            </div>

        </div>
    </div>
    <!-- #Header Starts -->

    <div id="body">

        @RenderBody()

    </div>
    <!-- Footer Starts -->
    <div class="footer text-center spacer" style="background-image:url('/Images/bgf.png');background-repeat:no-repeat;background-position:center;background-size:contain;text-shadow: 0 0 5px #0026ff, 0 0 7px #0026ff;">
        <p class="wowload flipInX" style="float:right;"><a href="#"><i class="fa fa-facebook fa-2x"></i></a> <a href="#"><i class="fa fa-instagram fa-2x"></i></a> <a href="#"><i class="fa fa-twitter fa-2x"></i></a> <a href="#"><i class="fa fa-flickr fa-2x"></i></a> </p>
        <p style="float:left;">Copyright 2015 XayTruong.Vn. All rights reserved.</p>
    </div>
    <!-- # Footer Ends -->
    <a href="#works" class="gototop "><i class="fa fa-angle-up  fa-3x"></i></a>

    <!-- The Bootstrap Image Gallery lightbox, should be a child element of the document body -->
    <div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
        <!-- The container for the modal slides -->
        <div class="slides"></div>
        <!-- Controls for the borderless lightbox -->
        <h3 class="title">Title</h3>
        <a class="prev">‹</a>
        <a class="next">›</a>
        <a class="close">×</a>
        <!-- The modal dialog, which will be used to wrap the lightbox content -->
    </div>


    <!-- jquery -->
    @*<script src="~/Content/assets/jquery.js"></script>*@

    <!-- wow script -->
    <script src="~/Content/assets/wow/wow.min.js"></script>


    <!-- boostrap -->
    <script src="~/Content/assets/bootstrap/js/bootstrap.js" type="text/javascript"></script>

    <!-- jquery mobile -->
    <script src="~/Content/assets/mobile/touchSwipe.min.js"></script>
    <script src="~/Content/assets/respond/respond.js"></script>

    <!-- gallery -->
    <script src="~/Content/assets/gallery/jquery.blueimp-gallery.min.js"></script>

    <!-- custom script -->
    <script src="~/Content/assets/script.js"></script>
    <script>
        function searchNow() {
            window.location.href = "/Home/Index?name=" + document.getElementById("name").value;
        }
        function gohome() {
            window.location.href = "/Home";
        }
        function goto(url) {
            window.location.href = url;
        }
    </script>
</body>
</html>
