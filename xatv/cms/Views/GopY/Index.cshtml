@model PagedList.IPagedList<cms.Models.gopy>
@using PagedList.Mvc; 

@{
    ViewBag.Title = "Danh sách góp ý/địa điểm mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Navigation -->
        @Html.Partial("~/Views/_vMenu.cshtml")
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.Title</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">                        
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Họ tên</th>
                                            <th>Điện thoại</th>
                                            <th>Nội dung</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model){
                                            <tr class="odd gradeX">
                                                <td>@item.name</td>
                                                <td>@item.phone</td>
                                                <td>@item.message</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
                <div class="col-lg-12">
                    <ul class="pagination clearfix">
                            <li class="disabled"><a href="#">«</a></li>
                            @for (int i = 1; i <= Model.PageCount; i++)
                            { 
                                 <text><li><a href="/GopY/Index?name=@ViewBag.name&page=@i">@i</a></li></text>
                            }
                    </ul>
                </div>
            </div>
            
        </div>
        <!-- /#page-wrapper -->
<script>
    function search() {
        window.location.href = "/GopY/Index?name=" + document.getElementById("name").value;
    }
</script>
