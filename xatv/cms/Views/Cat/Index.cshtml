@model PagedList.IPagedList<cms.Models.project_cat>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quản lý danh mục dự án";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="wrapper">
    <!-- Navigation -->
    @Html.Partial("~/Views/_vMenu.cshtml")
    <!-- Page Content -->
    <div id="page-wrapper">

        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <a href="/cat/add" class="btn btn-primary">Thêm danh mục dự án</a>
                @if (Model != null)
                {                    
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th>Tên danh mục</th>
                                    <th>Mô tả</th>
                                    <th>Ảnh đại diện</th>
                                    <th>Ảnh bìa</th>
                                    <td>Chức năng</td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>#@item.id</td>
                                            <td>@item.name</td>
                                            <td>@item.info</td>
                                            <td><img style="width: 100px;" src="@item.img" /></td>
                                            <td><img style="width: 200px;" src="@item.img2" /></td>
                                            <td>
                                                <a href="/cat/edit/@item.id" class="btn btn-primary">Sửa</a>
                                                <a href="/cat/delete/@item.id" class="btn btn-danger">Xóa</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    @Html.PagedListPager(Model, page => Url.Action("Index", "Cat", new { pg = page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                }
            </div>
        </div>



    </div>
    <!-- /#page-wrapper -->
</div>


@section scripts {


} 